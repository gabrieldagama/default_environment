FROM php:7.1-fpm

RUN apt-get update
RUN apt-get install curl -y
RUN apt-get install -y \
        libmcrypt-dev \
        mysql-client \
    && docker-php-ext-install mysqli pdo pdo_mysql \
    && curl -o /usr/local/bin/composer https://getcomposer.org/composer.phar \
    && chmod +x /usr/local/bin/composer
